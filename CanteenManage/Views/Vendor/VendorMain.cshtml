@model IEnumerable<CanteenManage.Models.Vendor>

@{
    ViewData["Title"] = "Vendor List";
}

<h1>Vendor List</h1>

<p>
    <a class="btn btn-secondary ms-3" asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VendorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VendorType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VendorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VendorType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <a class="btn btn-primary ms-3" asp-action="Edit" asp-route-id="@item.VendorId">Edit</a>
                    <a class="btn btn-success ms-3" asp-action="PurchaseDetails" asp-route-id="@item.VendorId">Purchase Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>
